<h1>Mus√©e de Enzo</h1>

<table>
  <thead>
    <tr>
      <th>Auteur</th>
      <th>Titre</th>
      <th>Date</th>
      <th>Dimensions</th>
      <th>Photo</th>
      <th>Commentaires</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.author %></td>
        <td><%= art.title %></td>
        <td><%= art.date %></td>
        <td><%= art.dimensions %></td>
        <td><img width="500px"src="<%= art.photo %>"></td>
        <td><%= art.comments %></td>
        <td><%= link_to 'Voir', art %></td>
        <td><%= link_to 'Editer', edit_art_path(art) %></td>
        <td><%= link_to 'Supprimer', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

